@model IEnumerable<FutureInclusion.DataAccessLayer.Models.User>

@{
    ViewData["Title"] = "Listar Usuários";
}

<h1> Listagem</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mandate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class='tabela-linha-clicavel' data-href="@Url.Action("Edit", ViewContext.RouteData.Values["Controller"].ToString(), new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @if (item.Enabled == true)
                {
                    @("Habilitado");
                }
                else
                {
                    @("Desabilitado");
                }
            </td>
            <td>
                @if (item.Mandate != null)
                {
                    @Html.DisplayFor(modelItem => item.Mandate.Title)
                }
            </td>
            <td class="td-acaoes">
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>

                <a href="#" class="btn btn-danger"
                   data-href="@Url.Action("Delete", ViewContext.RouteData.Values["Controller"].ToString(), new { id = item.Id})"
                   data-toggle="modal" data-target="#confirm-delete">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>